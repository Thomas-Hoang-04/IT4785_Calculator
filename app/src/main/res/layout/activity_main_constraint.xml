<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/screen"
            android:id="@+id/bar"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/black"
            app:layout_constraintHeight_percent="0.075"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.0">
        <ImageView
                android:layout_width="34dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/app_title"
                android:contentDescription="@string/app_icon"
                android:layout_height="34dp" app:srcCompat="@drawable/images" android:id="@+id/imageView"
                android:layout_marginStart="20dp"/>
        <TextView
                android:text="@string/app_name"
                app:layout_constraintStart_toEndOf="@id/imageView"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/app_title" android:textSize="27sp"
                android:textColor="#D9D9D9" android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:layout_marginStart="10dp"
                />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent" android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/bar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/numpad"
            android:id="@+id/screen"
            app:layout_constraintHeight_percent="0.25"
            android:background="#DBDBDB">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/but_0"
                android:textSize="120sp"
                android:paddingStart="0dp"
                android:paddingEnd="12dp"
                android:textColor="@color/black"
                android:gravity="end|center_vertical"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/screen"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.65"
            android:padding="0dp"
            android:id="@+id/numpad"
            android:background="@color/white"
            >
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/line_2"
                android:paddingHorizontal="5dp"
                android:id="@+id/line_1"
                android:background="@color/white"
        >
            <Button
                    android:text="@string/reset_but"
                    android:layout_width="0dp"
                    android:layout_marginHorizontal="4dp"
                    android:layout_marginTop="3dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/reset_ses"
                    app:layout_constraintHorizontal_weight="1"
                    android:layout_height="match_parent" android:id="@+id/reset"
                    android:backgroundTint="#D9D9D9"
                    android:textColor="@color/black" android:textSize="30sp" app:cornerRadius="0dp"/>
            <Button
                    android:text="@string/reset_ses_but"
                    android:layout_width="0dp"
                    android:layout_marginHorizontal="4dp"
                    android:layout_marginTop="3dp"
                    app:layout_constraintStart_toEndOf="@id/reset"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/bs"
                    app:layout_constraintHorizontal_weight="1"
                    android:layout_height="match_parent" android:id="@+id/reset_ses"
                    android:backgroundTint="#D9D9D9"
                    android:textColor="@color/black" android:textSize="30sp" app:cornerRadius="0dp"/>
            <Button
                    android:text="@string/bs_but"
                    android:layout_width="0dp"
                    android:layout_marginHorizontal="4dp"
                    android:layout_marginTop="3dp"
                    app:layout_constraintStart_toEndOf="@id/reset_ses"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/div"
                    app:layout_constraintHorizontal_weight="1"
                    android:layout_height="match_parent" android:id="@+id/bs"
                    android:backgroundTint="#D9D9D9"
                    android:textColor="@color/black" android:textSize="30sp" app:cornerRadius="0dp"/>
            <Button
                    android:text="@string/div_but"
                    android:layout_width="0dp"
                    android:layout_marginHorizontal="4dp"
                    android:layout_marginTop="3dp"
                    app:layout_constraintStart_toEndOf="@id/bs"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_weight="1"
                    android:layout_height="match_parent" android:id="@+id/div"
                    android:backgroundTint="#D9D9D9"
                    android:textColor="@color/black" android:textSize="30sp" app:cornerRadius="0dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line_1"
                app:layout_constraintBottom_toTopOf="@id/line_3"
                android:paddingHorizontal="5dp"
                android:id="@+id/line_2"
                android:background="@color/white"
        >
            <Button
                    android:text="@string/but_7"
                    android:layout_width="0dp"
                    android:layout_marginHorizontal="4dp"
                    android:layout_marginTop="3dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/but_8"
                    app:layout_constraintHorizontal_weight="1"
                    android:layout_height="match_parent" android:id="@+id/but_7"
                    android:backgroundTint="#EDEDED"
                    android:textColor="@color/black" android:textSize="30sp" app:cornerRadius="0dp"/>
            <Button
                    android:text="@string/but_8"
                    android:layout_width="0dp"
                    android:layout_marginHorizontal="4dp"
                    android:layout_marginTop="3dp"
                    app:layout_constraintStart_toEndOf="@id/but_7"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/but_9"
                    app:layout_constraintHorizontal_weight="1"
                    android:layout_height="match_parent" android:id="@+id/but_8"
                    android:backgroundTint="#EDEDED"
                    android:textColor="@color/black" android:textSize="30sp" app:cornerRadius="0dp"/>
            <Button
                    android:text="@string/but_9"
                    android:layout_width="0dp"
                    android:layout_marginHorizontal="4dp"
                    android:layout_marginTop="3dp"
                    app:layout_constraintStart_toEndOf="@id/but_8"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/mul"
                    app:layout_constraintHorizontal_weight="1"
                    android:layout_height="match_parent" android:id="@+id/but_9"
                    android:backgroundTint="#EDEDED"
                    android:textColor="@color/black" android:textSize="30sp" app:cornerRadius="0dp"/>
        <Button
                android:text="@string/mul_but"
                android:layout_width="0dp"
                android:layout_marginHorizontal="4dp"
                android:layout_marginTop="3dp"
                app:layout_constraintStart_toEndOf="@id/but_9"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="1"
                android:layout_height="match_parent" android:id="@+id/mul"
                android:backgroundTint="#D9D9D9"
                android:textColor="@color/black" android:textSize="30sp" app:cornerRadius="0dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line_2"
                app:layout_constraintBottom_toTopOf="@id/line_4"
                android:paddingHorizontal="5dp"
                android:id="@+id/line_3"
                android:background="@color/white"
                tools:layout_editor_absoluteY="124dp" tools:layout_editor_absoluteX="5dp">
            <Button
                    android:text="@string/but_4"
                    android:layout_width="0dp"
                    android:layout_marginHorizontal="4dp"
                    android:layout_marginTop="3dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/but_5"
                    app:layout_constraintHorizontal_weight="1"
                    android:layout_height="match_parent" android:id="@+id/but_4"
                    android:backgroundTint="#EDEDED"
                    android:textColor="@color/black" android:textSize="30sp" app:cornerRadius="0dp"/>
            <Button
                    android:text="@string/but_5"
                    android:layout_width="0dp"
                    android:layout_marginHorizontal="4dp"
                    android:layout_marginTop="3dp"
                    app:layout_constraintStart_toEndOf="@id/but_4"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/but_6"
                    app:layout_constraintHorizontal_weight="1"
                    android:layout_height="match_parent" android:id="@+id/but_5"
                    android:backgroundTint="#EDEDED"
                    android:textColor="@color/black" android:textSize="30sp" app:cornerRadius="0dp"/>
            <Button
                    android:text="@string/but_6"
                    android:layout_width="0dp"
                    android:layout_marginHorizontal="4dp"
                    android:layout_marginTop="3dp"
                    app:layout_constraintStart_toEndOf="@id/but_5"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/sub"
                    app:layout_constraintHorizontal_weight="1"
                    android:layout_height="match_parent" android:id="@+id/but_6"
                    android:backgroundTint="#EDEDED"
                    android:textColor="@color/black" android:textSize="30sp" app:cornerRadius="0dp"/>
            <Button
                    android:text="@string/sub_but"
                    android:layout_width="0dp"
                    android:layout_marginHorizontal="4dp"
                    android:layout_marginTop="3dp"
                    app:layout_constraintStart_toEndOf="@id/but_6"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_weight="1"
                    android:layout_height="match_parent" android:id="@+id/sub"
                    android:backgroundTint="#D9D9D9"
                    android:textColor="@color/black" android:textSize="30sp" app:cornerRadius="0dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line_3"
                app:layout_constraintBottom_toTopOf="@id/line_5"
                android:paddingHorizontal="5dp"
                android:id="@+id/line_4"
                android:background="@color/white"
                tools:layout_editor_absoluteY="248dp" tools:layout_editor_absoluteX="5dp">
            <Button
                    android:text="@string/but_1"
                    android:layout_width="0dp"
                    android:layout_marginHorizontal="4dp"
                    android:layout_marginTop="3dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/but_2"
                    app:layout_constraintHorizontal_weight="1"
                    android:layout_height="match_parent" android:id="@+id/but_1"
                    android:backgroundTint="#EDEDED"
                    android:textColor="@color/black" android:textSize="30sp" app:cornerRadius="0dp"/>
            <Button
                    android:text="@string/but_2"
                    android:layout_width="0dp"
                    android:layout_marginHorizontal="4dp"
                    android:layout_marginTop="3dp"
                    app:layout_constraintStart_toEndOf="@id/but_1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/but_3"
                    app:layout_constraintHorizontal_weight="1"
                    android:layout_height="match_parent" android:id="@+id/but_2"
                    android:backgroundTint="#EDEDED"
                    android:textColor="@color/black" android:textSize="30sp" app:cornerRadius="0dp"/>
            <Button
                    android:text="@string/but_3"
                    android:layout_width="0dp"
                    android:layout_marginHorizontal="4dp"
                    android:layout_marginTop="3dp"
                    app:layout_constraintStart_toEndOf="@id/but_2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/add"
                    app:layout_constraintHorizontal_weight="1"
                    android:layout_height="match_parent" android:id="@+id/but_3"
                    android:backgroundTint="#EDEDED"
                    android:textColor="@color/black" android:textSize="30sp" app:cornerRadius="0dp"/>
            <Button
                    android:text="@string/add_but"
                    android:layout_width="0dp"
                    android:layout_marginHorizontal="4dp"
                    android:layout_marginTop="3dp"
                    app:layout_constraintStart_toEndOf="@id/but_3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_weight="1"
                    android:layout_height="match_parent" android:id="@+id/add"
                    android:backgroundTint="#D9D9D9"
                    android:textColor="@color/black" android:textSize="30sp" app:cornerRadius="0dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line_4"
                app:layout_constraintBottom_toTopOf="parent"
                android:paddingHorizontal="5dp"
                android:id="@+id/line_5"
                android:background="@color/white"
                tools:layout_editor_absoluteY="372dp" tools:layout_editor_absoluteX="10dp">
            <Button
                    android:text="@string/sign_but"
                    android:layout_width="0dp"
                    android:layout_marginHorizontal="4dp"
                    android:layout_marginTop="3dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/but_0"
                    app:layout_constraintHorizontal_weight="1"
                    android:layout_height="match_parent" android:id="@+id/sign"
                    android:backgroundTint="#D9D9D9"
                    android:textColor="@color/black" android:textSize="30sp" app:cornerRadius="0dp"/>
            <Button
                    android:text="@string/but_0"
                    android:layout_width="0dp"
                    android:layout_marginHorizontal="4dp"
                    android:layout_marginTop="3dp"
                    app:layout_constraintStart_toEndOf="@id/sign"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/dot"
                    app:layout_constraintHorizontal_weight="1"
                    android:layout_height="match_parent" android:id="@+id/but_0"
                    android:backgroundTint="#EDEDED"
                    android:textColor="@color/black" android:textSize="30sp" app:cornerRadius="0dp"/>
            <Button
                    android:text="@string/dot_but"
                    android:layout_width="0dp"
                    android:layout_marginHorizontal="4dp"
                    android:layout_marginTop="3dp"
                    app:layout_constraintStart_toEndOf="@id/but_0"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/eq"
                    app:layout_constraintHorizontal_weight="1"
                    android:layout_height="match_parent" android:id="@+id/dot"
                    android:backgroundTint="#D9D9D9"
                    android:textColor="@color/black" android:textSize="30sp" app:cornerRadius="0dp"/>
            <Button
                    android:text="@string/eq_but"
                    android:layout_width="0dp"
                    android:layout_marginHorizontal="4dp"
                    android:layout_marginTop="3dp"
                    app:layout_constraintStart_toEndOf="@id/dot"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_weight="1"
                    android:layout_height="match_parent" android:id="@+id/eq"
                    android:backgroundTint="#D9D9D9"
                    android:textColor="@color/black" android:textSize="30sp" app:cornerRadius="0dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>